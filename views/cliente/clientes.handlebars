<h1 class="titulo titulo-principal">Todos os clientes</h1>

<div class="secao">
    {{> menuPainel}}

    <div class="artigo">
            <form method="get" class="form-seach-cliente">
                <input type="text" class="input input-search-cliente" name="search" value="{{search}}"
                    placeholder="Busque pelo nome do cliente...">
                <button class="bt bt-send b-block">Pesquisar</button>
            </form>
            <a href="/cliente/create"
                class="botao-add-flutuante">
                Novo cliente
            </a>
            <div class="lista">
                {{#each clientes}}
                <div class="item-lista item-lista-clientes">

                    <h2 class="fs-4">{{this.nome}}</h2>
                    <p>Ordens: {{this.qtdOrdens}}</p>
                    <div class="contato-item-lista-clientes">
                        <p>
                            <span class=""><i class="bi bi-telephone icon-item-lista-cliente"></i></span>
                            <a href="https://wa.me/+55{{this.telefone}}" target="_blank">
                                {{this.telefone}}
                            </a>
                        </p>
                        <span><a href="/cliente/cliente/{{this.id}}"><i class="bi bi-eye-fill icon-item-lista-cliente"></i></a></span>
                    </div>
                </div>
                {{/each}}
                {{#if clientesVazio}}
                <p class="text-center mt-3">Por enquanto não há clientes para mostrar</p>
                {{/if}}
            </div>
    </div>
</div>