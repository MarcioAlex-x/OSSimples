<h1 class="titulo titulo-principal">Atulizar {{produto.nome}}</h1>

<div class="secao">
    {{>menuPainel}}
    <div class="artigo">
        <form class="form-container" method="post" action="/produto/updateProduto">
        <input type="hidden" name="id" value="{{produto.id}}">
            <div class="input-container">
                <label for="" class="label">Produto</label>
                <input type="text" class="input" name="nome" value="{{produto.nome}}">
            </div>
            <div class="input-container">
                <label for="" class="label">Preço de compra</label>
                <input type="number" step="0.01" class="input" name="precoCompra" value="{{produto.precoCompra}}">
            </div>
            <div class="input-container">
                <label for="" class="label">Preço de venda</label>
                <input type="number" step="0.01" class="input" name="precoVenda" value="{{produto.precoVenda}}">
            </div>
            <div class="input-container">
                <label for="" class="label">Quantidade</label>
                <input type="number" step="0.01" class="input" name="quantidade" value="{{produto.quantidade}}">
            </div>
            <button type="submit" class="btn btn-primary">Eitar</button>
        </form>
    </div>
</div>
