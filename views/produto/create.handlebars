<h1 class="titulo titulo-principal">Cadastrar produto</h1>

<div class="secao">
    {{>menuPainel}}
    <div class="artigo">
        <form class="form-container" method="post" action="/produto/addProduto">
            <div class="input-container">
                <label for="" class="label">Produto</label>
                <input type="text" class="input" name="nome">
            </div>
            <div class="input-container">
                <label for="" class="label">Preço de compra</label>
                <input type="number" step="0.01" class="input" name="precoCompra">
            </div>
            <div class="input-container">
                <label for="" class="label">Preço de venda</label>
                <input type="number" step="0.01" class="input" name="precoVenda">
            </div>
            <div class="input-container">
                <label for="" class="label">Quantidade</label>
                <input type="number" step="0.01" class="input" name="quantidade">
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
        
    </div>
</div>